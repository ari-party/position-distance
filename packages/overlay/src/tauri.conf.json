{
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../../packages/mtc-artillery",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8888"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/32x32.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "productName": "mtc-artillery-overlay",
  "mainBinaryName": "mtc-artillery-overlay",
  "version": "0.2.7",
  "identifier": "com.artillery-calculator.overlay",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "alwaysOnTop": true,
        "decorations": false,
        "dragDropEnabled": false,
        "height": 1000,
        "label": "main",
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "theme": "Dark",
        "title": "Artillery overlay",
        "shadow": false,
        "transparent": true,
        "width": 500,
        "useHttpsScheme": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "$schema": "./capabilities/desktop-schema.json",
          "identifier": "main",
          "description": "main",
          "local": true,
          "windows": ["main"],
          "remote": {
            "urls": ["https://artillery-calculator.com"]
          },
          "permissions": [
            "core:webview:default",
            "core:window:default",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:window:allow-set-size",
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  }
}

