{
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../../packages/mtc-artillery",
    "devPath": "http://localhost:8888",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "mtc-artillery-overlay",
    "version": "0.2.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false
      },
      "window": {
        "all": false,
        "close": true,
        "setSize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/32x32.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.artillery-calculator.overlay",
      "targets": "all"
    },
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "artillery-calculator.com",
          "enableTauriAPI": true,
          "windows": ["main"]
        }
      ]
    },
    "windows": [
      {
        "alwaysOnTop": true,
        "decorations": false,
        "fileDropEnabled": false,
        "height": 1000,
        "label": "main",
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "theme": "Dark",
        "title": "Artillery overlay",
        "transparent": true,
        "width": 326
      }
    ]
  }
}
